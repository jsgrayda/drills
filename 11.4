--DRILL 7
--return count of records between 1987 and 2005
--1990 and 2000 are exclusive
SELECT COUNT(*)
FROM vehicles
WHERE year BETWEEN 1987 and 2005
AND year NOT IN (1990, 2000); --key


--DRILL 8
--return: year, make, model, and field called average_mpg
--average_mpg is average highway/city fuel consumption
